{
  "name": "@livelist/core",
  "version": "0.0.1",
  "description": "Core components for livelist-components library",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "solid": "./src/index.tsx",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist node_modules"
  },
  "peerDependencies": {
    "solid-js": "^1.9.0"
  },
  "devDependencies": {
    "solid-js": "^1.9.3",
    "vite": "^6.0.3",
    "vite-plugin-solid": "^2.11.0",
    "vite-plugin-dts": "^4.3.0",
    "@types/node": "^22.10.1"
  },
  "publishConfig": {
    "access": "public"
  }
}