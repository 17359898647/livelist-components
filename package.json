{
  "name": "livelist-components",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "A modern SolidJS component library",
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "pnpm --filter @livelist/core dev & sleep 3 && pnpm --filter example dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean && rimraf node_modules",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "release": "pnpm run build && changeset publish"
  },
  "dependencies": {
    "@antfu/eslint-config": "catalog:",
    "@changesets/cli": "catalog:",
    "eslint": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "eslint-plugin-solid": "catalog:"
  }
}
